@page
@model TylerDemo.Pages.ManageEmployeesModel
@{
}
<form method="post" >
    <div>
        <h3>Manage Employees</h3>
        <div class="form-group">
            <label for="roles">Manager</label>
            <select asp-for="selectedManager" asp-items="Model.ManagerList" class="form-control"></select>
        </div>
        <button type="submit" class="btn btn-primary" asp-page-handler="SearchManager">Search</button>
        <table class="table">
            <tr>
                <th>
                    Employee Number
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
            </tr>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>
                        @employee.EmployeeNumber
                    </td>

                    <td>
                        @employee.FirstName
                    </td>

                    <td>
                        @employee.LastName
                    </td>
                </tr>
            }
        </table>
        <input class="btn btn-primary" type="submit" value="Add Employee" asp-page-handler="AddEmployee" />
    </div>
</form>